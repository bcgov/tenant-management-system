{
  "name": "tms-api",
  "version": "1.0.0",
  "description": "Tenancy Management System API for BC Gov",
  "devDependencies": {
    "@testcontainers/postgresql": "11.11.0",
    "@tsconfig/node20": "^20.1.8",
    "@types/cors": "^2.8.10",
    "@types/dotenv": "^6.1.1",
    "@types/express": "^4.17.21",
    "@types/jest": "^26.0.24",
    "@types/node": "^20.0.0",
    "@types/supertest": "^2.0.11",
    "@types/swagger-ui-express": "^4.1.2",
    "@types/yamljs": "^0.2.34",
    "@typescript-eslint/eslint-plugin": "^8.54.0",
    "@typescript-eslint/parser": "^8.54.0",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.5",
    "jest": "^29.7.0",
    "nodemon": "^3.1.5",
    "pg": "^8.14.0",
    "prettier": "^3.8.1",
    "supertest": "^7.2.2",
    "testcontainers": "^11.11.0",
    "ts-jest": "^29.2.6",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "@types/express-jwt": "^6.0.4",
    "axios": "^1.13.5",
    "cls-rtracer": "^2.6.0",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.22.1",
    "express-jwt": "^8.5.1",
    "express-validation": "^3.0.8",
    "jwks-rsa": "^3.2.0",
    "swagger-ui-express": "^4.6.3",
    "typeorm": "^0.3.20",
    "winston": "^3.3.3",
    "yamljs": "^0.3.0"
  },
  "depcheck": {
    "ignores": [
      "@types/jest"
    ]
  },
  "scripts": {
    "lint": "eslint 'src/**/*.{ts,tsx}' --max-warnings 0",
    "start": "ts-node --transpile-only src/index.ts",
    "dev": "nodemon --exec ts-node src/index.ts",
    "typeorm": "ts-node --transpile-only ./node_modules/typeorm/cli.js",
    "migrate": "ts-node --transpile-only ./node_modules/typeorm/cli.js migration:run -d src/common/db.connection.ts",
    "migrate:down": "ts-node --transpile-only ./node_modules/typeorm/cli.js migration:revert -d src/common/db.connection.ts",
    "build": "tsc",
    "prod:migrate": "typeorm migration:run -d dist/common/db.connection.js",
    "prod:start": "npm run prod:migrate && node dist/index.js",
    "test": "jest --config jest.config.js --detectOpenHandles --forceExit",
    "test:cov": "jest --config jest.config.js --coverage --detectOpenHandles --forceExit",
    "test:watch": "jest --watch"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  }
}
